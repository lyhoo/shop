<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        android:padding="1dp">

        <CheckBox
            android:id="@+id/store_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_bg"
            android:gravity="center"
            android:minWidth="32dp"
            android:minHeight="48dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/store_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="77dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/dianpu" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/store_checkBox"
            android:drawableRight="@drawable/right_arrow"
            android:drawablePadding="5dp"
            android:text="小马的店铺"
            android:textColor="@color/grey_color2"
            android:textSize="16sp" />

        <Button
            android:id="@+id/store_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:text="编辑"
            android:textColor="@color/grey_color2"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>